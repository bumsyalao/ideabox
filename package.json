{
  "name": "ideabox",
  "version": "1.0.0",
  "description": "Ideabox is a simple application that allows users to create a pool of ideas and promote collaboration",
  "main": "app.js",
  "scripts": {
    "start:dev": "nodemon server/app.js --exec babel-node --presets es2015,stage-2",
    "build": "babel lib -d dist --presets es2015,stage-2",
    "test": "NODE_ENV=test nyc --reporter=html --reporter=text ./node_modules/.bin/mocha --compilers js:babel-core/register --timeout 30000  --exit server/test/**",
    "coverage": "nyc --reporter=html --reporter=text --reporter=lcov mocha --reporter spec --require babel-register server/tests/**/*.js --timeout 600000 --exit", 
    "coveralls": "npm run coverage -- --report lcovonly && cat coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bumsyalao/ideabox.git"
  },
  "keywords": [
    "ideabox"
  ],
  "author": "Bunmi Alao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bumsyalao/ideabox/issues"
  },
  "homepage": "https://github.com/bumsyalao/ideabox#readme",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^3.0.0",
    "crypto": "^1.0.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.1.0",
    "mocha": "^4.0.1",
    "mongoose": "^4.13.5",
    "morgan": "^1.9.0",
    "nodemailer": "^4.4.0",
    "nyc": "^11.3.0",
    "path": "^0.12.7",
    "supertest": "^3.0.0",
    "validator": "^9.1.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "mongoose": "^4.13.5",
    "nodemon": "^1.12.1"
  }
}
