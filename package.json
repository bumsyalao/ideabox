{
  "name": "ideabox",
  "version": "1.0.0",
  "description": "Ideabox is a simple application that allows users to create a pool of ideas and promote collaboration",
  "main": "app.js",
  "scripts": {
    "start:dev": "nodemon server/app.js --exec babel-node --presets es2015,stage-2",
    "start": "babel-node -- server/app.js",
    "postinstall": "npm run prod-build",
    "build": "webpack --config webpack.config.js",
    "prebuild": "rm -rf ./dist",
    "prod-build": "./node_modules/.bin/webpack --config ./webpack.config.prod.js",
    "client:test": "nightwatch",
    "e2e-setup": "selenium-standalone install",
    "test": "NODE_ENV=test nyc -x \"server/middleware/*.js\" --reporter=html --reporter=text ./node_modules/.bin/mocha --compilers js:babel-core/register --timeout 80000  --exit server/test/**",
    "coverage": "nyc --reporter=html --reporter=text --reporter=lcov mocha --reporter spec --require babel-register server/tests/**/*.js --timeout 600000 --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bumsyalao/ideabox.git"
  },
  "keywords": [
    "ideabox"
  ],
  "author": "Bunmi Alao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bumsyalao/ideabox/issues"
  },
  "homepage": "https://github.com/bumsyalao/ideabox#readme",
  "dependencies": {
    "axios": "^0.19.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-html-attrs": "^2.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "classnames": "^2.2.5",
    "compression": "^1.7.0",
    "copy-webpack-plugin": "^4.2.3",
    "cross-env": "^5.0.2",
    "crypto": "^1.0.1",
    "crypto-js": "^3.1.9-1",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "enzyme-to-json": "^3.2.2",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "faker": "^4.1.0",
    "font-awesome": "^4.7.0",
    "html-webpack-plugin": "^2.29.0",
    "json-loader": "^0.5.7",
    "jsonwebtoken": "^8.1.0",
    "material-design-icons": "^3.0.1",
    "mocha": "^4.0.1",
    "mongoose": "^4.13.5",
    "morgan": "^1.9.1",
    "mysql": "^2.13.0",
    "nexmo": "^2.0.2",
    "node-sass": "^4.13.0",
    "nodemailer": "^4.4.0",
    "nyc": "^11.3.0",
    "packery": "^2.1.1",
    "path": "^0.12.7",
    "pg": "^6.1.5",
    "pg-hstore": "^2.3.2",
    "prop-types": "^15.5.10",
    "react": "^16.2.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-mde": "^2.3.2",
    "react-packery-component": "^1.0.2",
    "react-paginate": "^5.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.7.2",
    "redux-mock-store": "^1.3.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "scss-loader": "0.0.1",
    "sequelize": "^3.30.4",
    "showdown": "^1.9.1",
    "sinon": "^4.0.1",
    "style-loader": "^0.19.0",
    "supertest": "^3.0.0",
    "url-loader": "^0.6.2",
    "validator": "^9.1.2",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-dev-server": "^2.11.5",
    "webpack-hot-middleware": "^2.21.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.0.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.9",
    "ember-cli-materialize": "^0.22.0",
    "enzyme-adapter-react-16": "^1.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx": "0.0.2",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "expect": "^21.2.1",
    "file-loader": "^0.11.2",
    "img-loader": "^2.0.0",
    "jest": "^21.2.1",
    "jquery": "^3.4.1",
    "mongoose": "^4.13.5",
    "moxios": "^0.4.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.1.0",
    "react-test-renderer": "^16.2.0",
    "regenerator-runtime": "^0.11.0",
    "selenium-server-standalone-jar": "^3.8.1",
    "selenium-standalone": "^6.17.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/client/test-env.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/client/utils/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/client/utils/assetsTransformer.js"
    },
    "roots": [
      "<rootDir>/client/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/server/**",
      "!**/coverage/**",
      "!webpack.config.js",
      "!webpack.config.prod.js",
      "!bundle.js",
      "!**/client/index.jsx",
      "!**/client/test-env.js",
      "!**/client/Routes.jsx",
      "!**/client/dist/**",
      "!**/client/reducers/combineReducer.js",
      "!**/client/utils/assetsTransformer.js",
      "!**/client/store/**",
      "!**/client/utils/**",
      "!**/client/test/**"
    ]
  }
}
